<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
   ohos:width="match_parent"
   ohos:orientation="vertical"
   ohos:height="match_parent">


    <DirectionalLayout
        ohos:id="$+id:list_parent"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:padding="10vp"
        ohos:height="match_content">

            <Image
                ohos:id="$+id:dev_image"
                ohos:height="200vp"
                ohos:width="match_parent"
                ohos:image_src="$media:img_grassland">
            </Image>

            <ListContainer
                ohos:id="$+id:list_container"
                ohos:width="match_parent"
                ohos:weight="1"
                ohos:height="0vp"/>

            <Button
                ohos:id="$+id:bnt_add"
                ohos:height="40vp"
                ohos:text_size="30fp"
                ohos:text="$string:add"
                ohos:text_color="#000000"
                ohos:width="match_parent"
                ohos:background_element="$graphic:bg_common"/>
    </DirectionalLayout>
</DirectionalLayout>